{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "Logs/errorLog-.txt",
                "rollingInterval": "Month"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "WithExceptionDetails" ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "localDb" : "Data Source = database.db"
  }
}
