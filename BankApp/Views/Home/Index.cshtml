@model FormViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row gx-3 mt-5 gap-0 gap-md-5">
    <div class="col-12 col-md-2 mb-3 mb-md-0 mt-5" id="form">

        <form asp-action="XmlToDbAction" asp-controller="Home" method="post" role="form" enctype="multipart/form-data">

            <div class="form-group d-flex flex-column">
                <label for="bank" class="mb-2">Odaberite banku:</label>
                <div class="ms-3">
                    <input type="radio" asp-for="Bank" value="raiffeisen" class="form-check-input" id="raiffeisen" checked="checked">
                    <label for="raiffeisen">Raiffeisen banka</label>
                </div>
                <div class="ms-3">
                    <input type="radio" asp-for="Bank" value="#" class="form-check-input" id="erste" disabled>
                    <label for="erste">Erste banka</label>
                </div>
                <span asp-validation-for="Bank" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 d-flex flex-column">
                <label for="currency" class="mb-2">Odaberite valutu:</label>
                <div class="ms-3">
                    <input type="radio" asp-for="Currency" value="rsd" class="form-check-input" id="rsd" checked="checked">
                    <label for="rsd">RSD</label>
                </div>
                <div class="ms-3">
                    <input type="radio" asp-for="Currency" value="#" class="form-check-input" id="eur" disabled>
                    <label for="eur">EUR</label>
                </div>
                <div class="ms-3">
                    <input type="radio" asp-for="Currency" value="#" class="form-check-input" id="usd" disabled>
                    <label for="usd">USD</label>
                </div>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="FormFile" class="mb-2">Upload File:</label>
                <input asp-for="FormFile" type="file" class="form-control" />
                <span asp-validation-for="FormFile" class="text-danger"></span>
            </div>

            <div class="mt-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>

    <div class="col-md-9">
        <table id="transactionTable" class="table table-bordered">
            <thead>
                <tr>
                    <th>RB</th>
                    <th>Datum prijema/datum izvrsenja</th>
                    <th>Broj naloga</th>
                    <th>Primalac</th>
                    <th>Sifra placanja/svrha</th>
                    <th>Duguje</th>
                    <th>Ime File-a</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transaction in Model.RaiffeisenRsd)
                {
                    <tr>
                        <td>@transaction.Id</td>
                        <td>@transaction.TransactionDate</td>
                        <td>@transaction.Reference</td>
                        <td>@transaction.Recipient</td>
                        <td>@transaction.TransactionDescription</td>
                        <td>@transaction.Debit</td>
                        <td>@transaction.FileName</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex justify-content-end mt-2 gap-1">
            <button id="deleteButton" class="btn btn-danger">Delete Selected</button>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.0/xlsx.full.min.js"></script>
<script src="~/js/DeleteTransactions.js" asp-append-version="true"></script>